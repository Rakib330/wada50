@model NextWorld.Models.Trainee
@{
    ViewBag.Title = "Delete";
}

<h2>Confirm For Delete</h2>
@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.TraineeNo)
    <div class="row mb-3">
        @Html.LabelFor(x => x.TraineeName, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.DisplayFor(x => x.TraineeName)
        </div>
    </div>
    <div class="row mb-3">
        @Html.LabelFor(x => x.TraineeEmail, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.DisplayFor(x => x.TraineeEmail)

        </div>
    </div>
    <div class="row mb-3">
        @Html.LabelFor(x => x.TraineeCourse, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.DisplayFor(x => x.TraineeCourse)

        </div>

    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
    @Html.ActionLink("Edit Info", "Edit", "Home", new {id=Model.TraineeNo}, new { @class = "text-primary d-block py-2 h5" })
    @Html.ActionLink("Back to Home", "Index", "Home", new { }, new { @class = "text-primary d-block" })
}
